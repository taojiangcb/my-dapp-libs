{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "ignoreChanges": [
    "apps/**",
    "**/node_modules/**",
    "**/_shapshots_/**"
  ],
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "version": {
    "ignoreChanges": [
      "apps/**"
    ]
  },
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "[skin ci] chore:release",
      "skipInstall": true,
      "ignoreScripts": true
    }
  }
}